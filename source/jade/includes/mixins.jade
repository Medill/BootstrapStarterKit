mixin head(title)
	include ascii

	head
		meta(charset='utf-8')
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description', content='Starter Kit for Bootstrap')
		meta(name='author', content='Zach Wise')
		meta(name='keywords', content='Template, Bootstrap')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='apple-touch-fullscreen', content='yes')

		title #{title}

		// CSS
		link(rel='stylesheet', href='css/project.css?v10')

		// HTML5 shim, for IE6-8 support of HTML elements
		//if lt IE 9
			script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
			script(src='https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js')
		
		// Icon
		link(rel='shortcut icon', href='img/ico/favicon.png')
		link(rel='apple-touch-icon-precomposed', href='img/ico/favicon.png')
		link(rel='apple-touch-icon-precomposed', href='img/ico/apple-touch-icon-144.png', sizes="144x144")


mixin navbar(currentpage)
	// NAVBAR
	div.navbar.navbar-default.navbar-fixed-top(role="navigation")
		div.container
			div.navbar-header
				button.navbar-toggle(type="button", data-toggle="collapse", data-target=".navbar-collapse")
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href="index.html") Project
			// Navbar Links etc
			div.navbar-collapse.collapse
				ul.nav.navbar-nav
					
				ul.nav.navbar-nav.navbar-right
					// HOME
					if currentpage == "Home"
						li.active
							a(href="index.html") Home
					else
						li
							a(href="index.html") Home

					// Storytelling Interactive Tools
					if currentpage == "Interactive"
						li.active
							a(href="interactive.html") Interactive
					else
						li
							a(href="interactive.html") Interactive
					// HTML 101
					if currentpage == "Learning HTML"
						li.active
							a(href="html.html") HTML
					else
						li
							a(href="html.html") HTML
					// CSS
					if currentpage == "CSS"
						li.active
							a(href="css.html") CSS
					else
						li
							a(href="css.html") CSS
					// JavaScript
					if currentpage == "JavaScript"
						li.active
							a(href="javascript.html") JavaScript
					else
						li
							a(href="javascript.html") JavaScript
					// Wireframing/Sketching
					if currentpage == "Wireframe"
						li.active
							a(href="wireframe.html") Wireframing/Sketching
					else
						li
							a(href="wireframe.html") Wireframing/Sketching
	// END NAVBAR